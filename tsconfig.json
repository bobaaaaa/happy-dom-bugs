{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext", "DOM", "DOM.Iterable"
    ],
    "module": "preserve",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "sourceMap": false,
    "verbatimModuleSyntax": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
